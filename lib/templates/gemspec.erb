# -*- encoding: utf-8 -*-

require File.expand_path('../lib/{project_name}/version', __FILE__)

Gem::Specification.new do |spec|
 spec.name          = "{project_name}"
 spec.version       = {module_name}::VERSION
 spec.summary       = %q{TODO: Write a short summary. Required.}
 spec.description   = %q{TODO: Write a longer description. Optional.}
 spec.homepage      = "https://github.va.opower.it/{username}/{project_name}"

 spec.authors       = ["{username}"]
 spec.email         = ["{username}@opower.com"]

 # This gem will work with 1.9.3 or greater...
 spec.required_ruby_version = '>= 1.9.3'

 spec.license       = "MIT"

 #file attributes...
 spec.files         = `git ls-files`.split($\)
 spec.executables   = spec.files.grep(%r{^bin/}) { |f| File.basename(f) }
 spec.test_files    = spec.files.grep(%r{^(test|spec|features)/})
 spec.require_paths = ["lib"]

 #development dependencies...
<% File.open(File.join(dir, "templates/gems.txt"), "r") do |infile| -%>
<% infile.each_line do |line| -%>
 spec.add_development_dependency(<%= line.strip -%>)
<% end -%>
<% end -%>
end
