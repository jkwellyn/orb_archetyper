#!/usr/bin/env rake

PROJECTS = %w() # fill in sub projects here as you generate
task_dependencies = []

PROJECTS.each do |project|
  # TODO: fill in more tasks for each project
  namespace project do
    desc "Build #{project} project"
    task :build do
      Dir.chdir "#{project}" do
        Bundler.with_clean_env do
          cmd = './build.sh'
          sh cmd
        end
      end
    end
  end
  task_dependencies << "#{project}:build"
end

desc 'Build entire project.'
task build: task_dependencies
